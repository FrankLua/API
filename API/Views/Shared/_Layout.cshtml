<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />    
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/Layout.css" asp-append-version="true">
    <script src ="~/js/LO/Common.js" defer></script> 
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="header">
        <div class = "menu" > GymSite</div>
    </div>
    <div class="container">

        <div class = "sidebar">
            <div class="person-cab">                
            </div>
            @if (ViewBag.Role == "admin")
            {
                <a class="menu-button" href="/Web/PlayLists/PlaylistsFace">>My Playlist</a>
                <a class="menu-button" href="/Web/Download/DownloadFace">>Download Files</a>
                <a class="menu-button" href="/Web/User/Create">>Create new user</a>
                <a class="menu-button" href="/Web/Log/Logout">>Exit account</a>
            }
            else
            {
                <a class="menu-button" href="/Web/Devices/DevicesFace">>My Device</a>
                <a class="menu-button" href="/Web/PlayLists/PlaylistsFace">>My Playlist</a>
                <a class="menu-button" href="/Web/Download/DownloadFace">>Download Files</a>                
                <a class="menu-button" href="/Web/Log/Logout">>Exit account</a>
            }
            
            
        </div>
        <div class = "content" id="content">
            @RenderBody()
        </div>
    </div>
    <div class="footer">
        <div class="foter-content">all right protected v-1.03</div>
    </div>
</body>
</html>