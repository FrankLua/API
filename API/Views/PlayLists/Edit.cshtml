@{
	ViewBag.Title = "Edit";
	Layout = "/Views/Shared/_Layout.cshtml";
}
@model API.DAL.Entity.Models.Media_playlist
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<head>
    <link href="~/css/PL/Edit.css" rel="stylesheet" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="~/js/PL/Tables-Face.js" defer></script>
</head>


<div class="menu-board">
    <h2 id ="main"title="@Model._id">@Model.name</h2>
    <input placeholder="Поиск по имени" type="text" id="elastic">       
</div>
<div class="lable-page" id="lable-page"">
    <table class="main-table-playlist" id="table" title="Med">
        <thead>
            <tr>
                <th data-type="string" title="true">
                    Добавлен ли в плей лист
                </th>
                <th data-type="string" title="true">
                    Название
                </th>
                
                <th data-type="string" title="true">
                    Тип
                </th>                
            </tr>
        </thead>
        <tbody id="source-list">
            @if (ViewBag.Enabled_File != null && ViewBag.Disable_File != null && ViewBag.PublicFile != null)
            {
                if (ViewBag.Enabled_File.Count > 0 || ViewBag.Disable_File.Count > 0 || ViewBag.PublicFile.Count > 0)
                {
                    @foreach (var item in ViewBag.Enabled_File)
                    {
                        <tr class="enable_row" data_Id="@item._id/Med">
                            <td>
                                <div class="btn-barter-disable" id="btn-barter" data_state="true" title="Удалить"></div>
                            </td>
                            <td>
                                <p id="item">@item.name</p>
                            </td>
                            <td>
                                <p>@item.mime_type</p>
                            </td>                          
                            
                        </tr>
                    }
                
                
                    @foreach (var item in ViewBag.Disable_File)
                    {
                        <tr class="disable_row" data_Id="@item._id/Med">
                            <td>
                                <div class="btn-barter-enable" id="btn-barter" data_state="false" title="Добавить"></div>
                            </td>
                            <td>
                                <p id="item">@item.name</p>
                            </td>
                            <td>
                                <p>@item.mime_type</p>
                            </td>
                            
                        </tr>
                    }
                    @foreach (var item in ViewBag.PublicFile)
                    {
                        <tr class="disable_row" data_Id="@item._id/Med">
                            <td>
                                <div class="btn-barter-enable" id="btn-barter" data_state="false" title="Добавить"></div>
                            </td>
                            <td>
                                <p id="item">@item.name</p>
                            </td>
                            <td>
                                <p>@item.mime_type</p>
                            </td>                            
                        </tr>
                    }

                }
                else
                {
                    <tr class="disable_row" title="none">
                        <td colspan="4"><p>Здесь ничего нет</p></td>                        
                    </tr>
                }
            }
            
        </tbody>
    </table>
</div>
<div class="added-Content">
    <button class="save" id="save">Save</button>
</div>