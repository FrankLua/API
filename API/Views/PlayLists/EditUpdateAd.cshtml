@model API.DAL.Entity.Models.Media_Ad_playlist

    <table class="main-table-playlist" id="table" title="Ad">
        <thead>
            <tr>
                <th data-type="string" title="true">
                    Добавлен ли в плей лист
                </th>
                <th data-type="string" title="true">
                    Название
                </th>
                <th data-type="string" title="true">
                    Тип
                </th>
                <th data-type="string" title="true">
                    Публичность
                </th>
                <th data-type="string" title="true">
                    Время воспроизведения
                </th>
            </tr>
        </thead>
        <tbody id="source-list">
            @if (ViewBag.Enabled_File != null && ViewBag.Disable_File != null)
            {
                if (ViewBag.Enabled_File.Count > 0 || ViewBag.Disable_File.Count > 0)
                {
                    @foreach (var item in ViewBag.Enabled_File)
                    {
                        <tr class="enable_row" title="@item._id/Ad">
                            <td>
                                <div class="btn-barter-disable" id="btn-barter" title="true"></div>
                            </td>
                            <td>
                                <p id="item">@item.name</p>
                            </td>
                            <td>
                                <p>@item.mime_type</p>
                            </td>
                            <td>
                                <p>Приватный</p>
                            </td>
                            <td>
                                <input id="time" name="time" value="@Model.ad_files.Find(a => a.file ==item._id.ToString()).start_time" onkeypress="return (event.charCode == 8 || event.charCode == 0 || event.charCode == 13) ? null : event.charCode >= 48 && event.charCode <= 57">
                            </td>
                        </tr>
                    }


                    @foreach (var item in ViewBag.Disable_File)
                    {
                        <tr class="disable_row" title="@item._id/Ad">
                            <td>
                                <div class="btn-barter-enable" id="btn-barter" title="false"></div>
                            </td>
                            <td>
                                <p id="item">@item.name</p>
                            </td>
                            <td>
                                <p>@item.mime_type</p>
                            </td>
                            <td>
                                <p>Приватный</p>
                            </td>
                            <td>
                                <input id="time" value="" onkeypress="return (event.charCode == 8 || event.charCode == 0 || event.charCode == 13) ? null : event.charCode >= 48 && event.charCode <= 57">
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr class="disable_row" title="none">
                        <td colspan="5"><p>Здесь ничего нет</p></td>
                    </tr>
                }
            }

        </tbody>
    </table>

